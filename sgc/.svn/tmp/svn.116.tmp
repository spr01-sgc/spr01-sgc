<%@include file="index.jsp" %>
<br />
<br />
<br />
<div id="contenidoPantalla" class="panel panel-default">
    <div class="row">

        <!-- Listado de Entidades -->
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="tableSucursal" class="table table-striped">
                    <thead>
                        <tr>
                            <td>ID</td>
                            <td>Sucursal</td>
                            <td>Número</td>
                            <td>Correo electronico</td>
                            <td>Calle</td>
                            <td>Colonia</td>
                            <td style="display:none">ID CP</td>
                            <td>Código Postal</td>
                            <td>Nombre</td>
                            <td>Apellido Paterno</td>
                            <td>Apelido Materno</td>
                            <td>CURP</td>
                            <td style="display:none">ID sexo</td>
                            <td>Sexo</td>
                            <td style="display:none">ID Entidad</td>
                            <td>Entidad Financiera</td>

                            <td></td>
                            <td></td>

                        </tr>
                    <thead>
                    <tbody>
                        <c:forEach items="${lSucursal}" var="sucursal">
                            <tr>
                                <td>${sucursal.sucursalid}</td>
                                <td>${sucursal.nombresucursal}</td>
                                <td>${sucursal.nosucursal}</td>
                                <td>${sucursal.correoelectronico}</td>
                                <td>${sucursal.direccionid.calle}</td>
                                <td>${sucursal.direccionid.colonia}</td>
                                <td style="display:none">${sucursal.direccionid.codigopostalid.codigopostalid}</td>
                                <td>${sucursal.direccionid.codigopostalid.clave}</td>
                                <td>${sucursal.personaid.nombre}</td>
                                <td>${sucursal.personaid.apaterno}</td>
                                <td>${sucursal.personaid.amaterno}</td>
                                <td>${sucursal.personaid.curp}</td>
                                <td style="display:none">${sucursal.personaid.sexoid.sexoid}</td> 
                                <td>${sucursal.personaid.sexoid.descripcion}</td>
                                <td style="display:none">${sucursal.entidadid.entidadid}</td> 
                                <td>${sucursal.entidadid.nombrecorto}</td>

                                <td><button id="mostrar" onclick="completaInputsSucursal();" data-toggle="modal" data-target="#myModal" class="btn btn-warning">
                                        <span class="glyphicon glyphicon-pencil"></span> </button></td>
                                <td><button id="eliminar" class="btn btn-danger" onclick="eliminarSucursal(${sucursal.sucursalid});">
                                        <span class="glyphicon glyphicon-remove"></span></button></td>
                            </tr>
                        </c:forEach>
                    </tbody>

                </table>
                <button id="agregar" class="btn btn-info" data-toggle="modal" data-target="#myModal"> 
                    <span class="glyphicon glyphicon-file"></span> agregar</button>
            </div>
            <input type="hidden" name="${_csrf.parameterName}"
                   value="${_csrf.token}" />

        </div>
        <div class="container">
            <!-- Modal -->
            <div class="color">
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <div class="form-group">
                                    <label  class="control-label col-sm-8"><h3 class="control-label col-sm-6">Sucursal</h3></label>
                                </div>
                            </div>
                            <div class="modal-body">
                                <!--Formilario para agregar usuario -->
                                <form class="form-horizontal">
                                    <div class = "oculto">
                                        <input type="number" id="sucursalid">
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="nombre">Nombre  </label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="nombresucursal" placeholder="">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="nosucursal">Número </label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" id="nosucursal" placeholder="">
                                        </div>

                                        <label class="control-label col-sm-1" for="correoelectronico">Email </label>
                                        <div class="col-sm-4">
                                            <input type="email" class="form-control" id="correoelectronico" placeholder="">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="numtelefono">Telefono </label>
                                        <div class="col-sm-4">
                                            <input type="number" class="form-control" id="numtelefono" placeholder="">
                                        </div>

                                        <label  class="control-label col-sm-1">Tipo Telefono</label>
                                        <div class="col-sm-4">
                                            <!-- consulta catalogo -->
                                            <SELECT id="telefono" class="form-control">
                                                <option value="0">Seleccionar...</option>
                                                <c:forEach items="${lTipoTelefono}" var="tipo">
                                                    <OPTION value="${tipo.tipoid}">${tipo.tipotelefono}</OPTION>
                                                    </c:forEach>
                                            </SELECT>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3"> <h4>Dirección</h4></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="calle">Calle y número </label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="calle" placeholder="">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="calle">Colonia </label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" id="colonia" placeholder="">
                                        </div>
                                        <label  class="control-label col-sm-1">C.P.</label>
                                        <div class="col-sm-4">
                                            <!-- consulta catalogo -->
                                            <SELECT id="codigopostal" class="form-control">
                                                <option value="0">Seleccionar...</option>
                                                <c:forEach items="${lCodigoPostal}" var="cp">
                                                    <OPTION value="${cp.codigopostalid}">${cp.clave}</OPTION>
                                                    </c:forEach>
                                            </SELECT>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label  class="control-label col-sm-3"><h4>Datos del encargado </h4></label>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="nombre">Nombre </label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="nombre" placeholder="">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="apaterno">Apellido Paterno </label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" id="apaterno" placeholder="">
                                        </div>

                                        <label class="control-label col-sm-1" for="amaterno">Apellido Materno </label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" id="amaterno" placeholder="">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-sm-2" for="curp">CURP </label>
                                        <div class="col-sm-4">
                                            <input type="text" class="form-control" id="curp" placeholder="">
                                        </div>

                                        <label  class="control-label col-sm-1">Sexo</label>
                                        <div class="col-sm-4">
                                            <!-- consulta catalogo -->
                                            <SELECT id="sexo" class="form-control">
                                                <option value="0">Seleccionar...</option>
                                                <c:forEach items="${lSexo}" var="sexo">
                                                    <OPTION value="${sexo.sexoid}">${sexo.descripcion}</OPTION>
                                                    </c:forEach>
                                            </SELECT>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label  class="control-label col-sm-3"><h4>Entidad Financiera asociada </h4></label>
                                    </div>
                                    <div class="form-group">
                                        <label  class="control-label col-sm-2">Entidad Financiera</label>
                                        <div class="col-sm-9">
                                            <!-- consulta catalogo -->
                                            <SELECT id="entidadF" class="form-control">
                                                <option value="0">Seleccionar...</option>
                                                <c:forEach items="${lEntidad}" var="entidad">
                                                    <OPTION value="${entidad.entidadid}">${entidad.nombrecorto}</OPTION>
                                                    </c:forEach>
                                            </SELECT>
                                        </div>
                                    </div>
                                </form> 
                            </div><!--modal body-->
                            <div class="modal-footer">
                                <div class="form-group">
                                    <button id="guardar" class="btn btn-success" onclick="agregarSucursal();" data-dismiss="modal" >Guardar</button>
                                    <button id="actualizar" onclick="actualizarSucursal();" class="btn btn-primary" disabled="true" >Actualizar</button>
                                    <button id="limpiar" onclick="limpiarCajas();" class="btn btn-default">Limpiar</button>
                                </div>
                            </div><!--modal footer-->
                        </div><!--modal6-container-->
                    </div><!--modal dialog-->
                </div><!--modalfade-->
            </div>
        </div><!--container-->
    </div>
</div>
</body>

</html>

