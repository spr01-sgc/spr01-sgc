package com.soma.transmisor.dao.impl;

import com.soma.transmisor.dao.CtCausaRechazoDao;
import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.model.ctCausaRechazo;
import java.util.List;
import org.hibernate.Criteria;
import org.hibernate.criterion.Restrictions;
import org.springframework.stereotype.Repository;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("ctCausaRechazoDaoImpl")
public class CtCausaRechazoDaoImpl extends HibernateDao<Integer, ctCausaRechazo> implements CtCausaRechazoDao{

    @Override
    public ctCausaRechazo buscaCausaRechazo(int causaRechazoId) {
        Criteria criteria = creaCriteria();
        criteria.add(Restrictions.eq("causaRechazoId", causaRechazoId));
        return (ctCausaRechazo)criteria.uniqueResult();
    }

    @Override
    public List<ctCausaRechazo> showCausaRechazo() {
        Criteria criteria = creaCriteria();
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        List<ctCausaRechazo> lCtCausaRechazo = criteria.list();
        return lCtCausaRechazo;
    }
    
}
