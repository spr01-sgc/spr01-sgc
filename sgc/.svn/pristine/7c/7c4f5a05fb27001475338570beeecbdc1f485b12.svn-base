package com.soma.transmisor.dao.impl;

import com.soma.transmisor.controller.ControllerPago;
import com.soma.transmisor.dao.CausaRechazoDao;
import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.model.CausaRechazo;
import java.util.logging.Level;
import java.util.logging.Logger;
import org.springframework.stereotype.Repository;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("causaRechazoDao")
public class CausaRechazoDaoImpl extends HibernateDao<Integer, CausaRechazo> implements CausaRechazoDao {

    private final static Logger LOGGER = Logger.getLogger(ControllerPago.class.getName());

    @Override
    public void save(CausaRechazo causaRechazo) {
        try {
            guardar(causaRechazo);
            System.out.println(CausaRechazoDaoImpl.class + " Se ha guardado correctamente la Causa/Rechazo "+ causaRechazo);
        } catch (Exception e) {
            LOGGER.log(Level.WARNING, "Fall√≥ al guardar la Causa/Rechazo", e);
            throw e;
        }

    }

    @Override
    public void update(CausaRechazo causaRechazo) {
        try {
            actualizar(causaRechazo);
            System.out.println(CausaRechazoDaoImpl.class +" Se ha actualizado correctamente la Causa/Rechazo " + causaRechazo);
        } catch (Exception e) {
        }
    }

}
