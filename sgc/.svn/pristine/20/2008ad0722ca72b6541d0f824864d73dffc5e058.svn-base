package com.soma.transmisor.service.impl;

import com.soma.transmisor.dao.FamiliarDao;
import com.soma.transmisor.model.Familiar;
import com.soma.transmisor.model.Pep;
import com.soma.transmisor.service.FamiliarService;
import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

/**
 *
 * @author JASMIN-SOMA
 */
@Service("familliarService")
@Transactional
public class FamilliarServiceImpl implements FamiliarService{
    @Autowired
    FamiliarDao familiarDao;
    
    private boolean estadoMetodo = false;

    @Override
    public boolean save(Familiar familiar) {
    familiarDao.save(familiar);
    return  estadoMetodo=true;
    }

    @Override
    public boolean update(Familiar familiar) {
    familiarDao.update(familiar);
    return estadoMetodo=true;
    }

    @Override
    public boolean delete(int familiarid) {
   familiarDao.delete(familiarid);
   return  estadoMetodo=true;
    }

    @Override
    public List<Familiar> showFamiliar() {
    return familiarDao.showFamiliar();
    }

    @Override
    public Familiar busquedaId(int familiarid) {
   return familiarDao.busquedaId(familiarid);
    }

    @Override
    public List<Familiar> showFamiliarPep(Pep pepid) {
    return familiarDao.showFamiliarPep(pepid);
    }
    
}
