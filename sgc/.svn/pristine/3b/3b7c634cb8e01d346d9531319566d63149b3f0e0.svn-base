package com.soma.transmisor.dao.impl;

import com.soma.transmisor.dao.ActividadEconomicaDao;
import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.model.ActividadEco;
import java.util.List;
import org.hibernate.Criteria;
import org.hibernate.criterion.Restrictions;
import org.springframework.stereotype.Repository;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("actividadEconomicaDao")
public class ActividadEconomicaDaoImpl extends HibernateDao<Integer, ActividadEco> implements ActividadEconomicaDao{

    @Override
    public ActividadEco buscaActividadEconomica(int actividadid) {
        Criteria criteria = creaCriteria();
        criteria.add(Restrictions.eq("actividadid",actividadid));
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        return(ActividadEco) criteria.uniqueResult();
    }

    @Override
    public List<ActividadEco> showActividadEconomica() {
        Criteria criteria = creaCriteria();
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        List<ActividadEco> lActividadEco = criteria.list();
        
        return lActividadEco;
    }
    
}
