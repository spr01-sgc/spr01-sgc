<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@include file="index.jsp" %>
<br />
<br />
<br />
<div class="container" id="divContCli">   
    <div class="panel-group">
        <div class="panel panel-primary">
            <div class="panel-heading">Listado de Clientes</div>
            <div id="contenidoPantalla" class="panel-body">        
                <div class="row">
                    <!-- Listado de clientes -->
                    <div  class="col-md-12">
                        <div class="table-responsive">
                            <div class="form-group">
                        <input type="text" class="form-control pull-right" style="width:20%" 
       id="search" onkeyup="busquedaTbl('tableClientes');" placeholder="Busqueda">
</div>
                            <table id="tableClientes" class="table table-striped">
                                <thead>
                                    <tr>                            
                                        <th>No</th>
                                        <th>IDCl</th>
                                        <th>Clave</th>
                                        <th>Nombre</th>
                                        <th>CURP</th>
                                        <th>RFC</th>
                                        <th>Correo electronico</th>

                                    </tr>
                                </thead>
                                <tbody id="bodytabla">
                                    <c:forEach items="${lpersonaCl}" var="clFi" varStatus="count"> 
                                        <tr title="Selecciona el Cliente" onclick="perfil();">                          
                                            <td>${count.count}</td>
                                            <td id="idclPf">${clFi.clienteid.clienteid}</td>                                          
                                            <td>${clFi.clienteid.clave}</td>                                            
                                            <td>${clFi.personaid.nombre}</td>
                                            <td>${clFi.personaid.curp}</td>
                                            <td>${clFi.clienteid.rfc}</td>
                                            <td>${clFi.clienteid.correoelectronico}</td>                                           
                                        </tr>

                                    </c:forEach>

                                </tbody>

                            </table>

                        </div>           
                        <input type="hidden" name="${_csrf.parameterName}"
                               value="${_csrf.token}" />
                    </div>
                </div><!-- row-->
            </div><!--class body -->
        </div><!-- panel-primary-->
    </div>  <!-- panel-group-->  
</div><!--class container -->
<!--Formilario para agregar usuario -->
<div id="divPerfil" style="display: none">
<div class="container">
    <form class="form-horizontal" id="frmPerfil">
        <strong><h2>Datos Generales del Cliente:</h2></strong>
        <hr>
        <div class="form-group">
           <strong> <label class="control-label col-md-1" for="nickname">Nombre:</label></strong>
                <label class="control-label col-md-4" id="nameCom"></label>
           <strong> <label  class="control-label col-md-1">Fecha de nacimiento:</label></strong>
             <label class="control-label col-md-2" id="fechNac"></label>
           <strong> <label class="control-label col-md-1">Sexo:</label></strong>
                <label class="control-label col-md-2"id="sexoC"></label>
        </div>
        <div class="form-group">
           <strong> <label class="control-label col-sm-1" for="curp">CURP:</label></strong>
                <label class="control-label col-md-2"id="curp"></label>
           <strong> <label class="control-label col-md-1" for="rcf">RFC:</label></strong>
                <label class="control-label col-md-2" id="rcf"></label>
            <strong> <label  class="control-label col-sm-2">Tipo de Identificación:</label></strong>
            <label class="control-label col-sm-3" id="tipIden"></label>
        </div>
        <h3>Dirección</h3>
        <hr>
        <div class="form-group">
            <strong> <label  class="control-label col-sm-1">Calle:</label></strong>
            <label class="control-label col-sm-4" id="calle"></label>
            <strong> <label  class="control-label col-sm-1">Colonia:</label></strong>
                <label class="control-label col-sm-4" id="colonia"></label>
        </div>
         
    </form>
        <hr>
        <h1 style="text-align: center">Movimientos</h1>
 <div class="form-group">
              <label class="control-label col-lg-5"></label>
            <label class="control-label col-md-1">Perfil transaccional:</label>
            <div class="col-md-2">                
                <input type="number" class="form-control" id="perfilCal" placeholder="00.00" value="" disabled="true">
            </div>
            <label  class="control-label col-md-1">Porcentaje:</label>
            <div class="col-md-2">                 
                <input type="number" class="form-control" id="porcentaje" placeholder="Porcentaje" value="0.5" onchange="cambioPorcentaje();">
            </div>
        </div>
        <br />
<br />
<br />
        <div  class="col-md-12">
    <!--Tabla de movimientos-->
    <div class="table-responsive">
         <div class="form-group">
                        <input type="text" class="form-control pull-right" style="width:20%" 
       id="search" onkeyup="busquedaTbl('tableMovimientos');" placeholder="Busqueda">
</div>
        <table id="tableMovimientos" class="table table-striped">
            <thead>
                <tr>                            
                    <th>No</th>
                    <th style="display: none">IDCl</th>
                    <th>Clave de Pago</th>
                    <th>Nombre</th>
                    <th>Montos por mes</th>
                    <th>Cantidad de pagos</th>
                    <th>Fechas de pagos</th>                                        
                    <th>Actividad Economica</th>
                    <th>Sucursal</th>

                </tr>
            </thead>
            <tbody>             
            </tbody>

        </table>
<div class="form-group">
              <label class="control-label col-lg-2"></label>
            <label class="control-label col-md-1">Total:</label>
            <div class="col-md-2">                
                <input type="number" class="form-control" id="total" placeholder="00.00" disabled="true">
            </div>
        </div>
    </div>
         <button id="regresarCl" type="button" class="btn btn-success" onclick="verPerfil();">Regresar</button>
    </div> 

                        
</div>
</div><!--divPerfil -->
</body>
</html>
