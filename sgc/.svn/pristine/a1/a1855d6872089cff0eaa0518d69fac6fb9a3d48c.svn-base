package com.soma.transmisor.service.impl;

import com.soma.transmisor.dao.PersonaMoralDao;
import com.soma.transmisor.model.PersonaMoral;
import com.soma.transmisor.service.PersonaMoralService;
import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("personaMoralService")
@Transactional
public class PersonaMoralServiceImpl implements PersonaMoralService{
    
   @Autowired
   PersonaMoralDao personaMoralDao;
   
   private boolean estadoMetodo = false;

    @Override
    public boolean save(PersonaMoral personaMoral) {
       personaMoralDao.save(personaMoral);
       return estadoMetodo = true;
    }

    @Override
    public boolean update(PersonaMoral personaMoral) {
        personaMoralDao.update(personaMoral);
        return estadoMetodo = true;
    }

    @Override
    public List<String> buscaPersonaMoral(String filtro, int parametro) {
        return personaMoralDao.buscaPersonaMoral(filtro, parametro);
    }
    
}
