package com.soma.transmisor.dao.impl;

import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.dao.InstrumentoMonetarioDao;
import com.soma.transmisor.model.InstrumentoMonetario;
import java.util.List;
import org.hibernate.Criteria;
import org.hibernate.criterion.Restrictions;
import org.springframework.stereotype.Repository;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("instrumentoMonetarioDao")
public class InstrumentoMonetarioDaoImpl extends HibernateDao<Integer, InstrumentoMonetario> implements InstrumentoMonetarioDao{

    @Override
    public InstrumentoMonetario buscaClave(int instrumentoid) {
        System.out.println(InstrumentoMonetarioDaoImpl.class + "\nBuscando Instrumento Monetario por Id: " + instrumentoid);
         Criteria criteria = creaCriteria();
        criteria.add(Restrictions.eq("instmonetarioid", instrumentoid));
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        return (InstrumentoMonetario) criteria.uniqueResult();
    }

    @Override
    public List<InstrumentoMonetario> showInstrumento() {
        Criteria criteria = creaCriteria();
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        List<InstrumentoMonetario> lInstrumentoMonetario = criteria.list();
        return lInstrumentoMonetario;
    }
    
}
