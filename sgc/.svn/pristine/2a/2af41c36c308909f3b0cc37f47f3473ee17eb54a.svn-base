package com.soma.transmisor.dao.impl;

import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.dao.UsoDineroDao;
import com.soma.transmisor.model.UsoDinero;
import java.util.List;
import org.hibernate.Criteria;
import org.hibernate.criterion.Restrictions;
import org.springframework.stereotype.Repository;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("usoDineroDao")
public class UsoDineroDaoImpl extends HibernateDao<Integer, UsoDinero> implements UsoDineroDao{

    @Override
    public UsoDinero buscaId(int usoDineroId) {
        Criteria criteria = creaCriteria();
        criteria.add(Restrictions.eq("UsoDineroId", usoDineroId));
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        return (UsoDinero) criteria.uniqueResult();
    }

    @Override
    public List<UsoDinero> showUsoDinero() {
        Criteria criteria = creaCriteria();
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        List<UsoDinero> lUsoDinero = criteria.list();
        return lUsoDinero;
    }
    
}
