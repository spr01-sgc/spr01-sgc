package com.soma.transmisor.dao.impl;

import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.dao.PepDao;
import com.soma.transmisor.model.Pep;
import java.util.List;
import org.hibernate.Criteria;
import org.hibernate.criterion.Restrictions;
import org.springframework.stereotype.Repository;

/**
 *
 * @author JASMIN-SOMA
 */
@Repository("pepDao")
public class PepDaoImpl extends HibernateDao<Integer, Pep> implements PepDao{

    @Override
    public void save(Pep pep) {
        guardar(pep);
          System.out.print(PepDaoImpl.class + "Se ha guardado correctamente la pep " + pep.toString());
    }

    @Override
    public void update(Pep pep) {
        actualizar(pep);
              System.out.print(PepDaoImpl.class + "Se ha actualizado correctamente la pep " + pep.toString());    
    }

    @Override
    public void delete(int pepid) {
       Criteria crit = creaCriteria();
        crit.add(Restrictions.eq("pepid", pepid));
        Pep pep = (Pep) crit.uniqueResult();
        eliminar(pep);
        System.out.print(GiroDaoImpl.class + "Se ha eliminado correctamente la PEP " + pepid);
   }

    @Override
    public List<Pep> showPba() {
    Criteria criteria = creaCriteria();
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        List<Pep> lPep = criteria.list();       
        return lPep;
    }

    @Override
    public Pep busquedaId(int pepid) {
    Pep pep=getPorId(pepid);
    return  pep;
    }
    
}
