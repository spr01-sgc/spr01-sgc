package com.soma.transmisor.dao.impl;

import com.soma.transmisor.dao.EstatusPagoDao;
import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.model.EstatusPago;
import org.hibernate.Criteria;
import org.hibernate.criterion.Restrictions;
import org.springframework.stereotype.Repository;

/**
 *
 * @author JASMIN-SOMA
 */
@Repository("estatusPagoDao")
public class EstatusPagoDaoImpl extends HibernateDao<Integer, EstatusPago> implements EstatusPagoDao{

    @Override
    public EstatusPago buscaId(int estatusid) {
    Criteria crit = creaCriteria();
        crit.add(Restrictions.eq("estatusid", estatusid));
        EstatusPago estatuspago= (EstatusPago) crit.uniqueResult();
        return estatuspago;
    }
    
}
