<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@page contentType="text/html" pageEncoding="UTF-8"%>


<%@include file="index.jsp" %>
<br />
<br />
<br />
<div class="container">   
    <div class="panel-group">
        <div class="panel panel-primary">
            <div class="panel-heading">Listado de Usuarios</div>
            <div id="contenidoPantalla" class="panel-body">        
                <div class="row">
                    <div class="form-group">
                        <div class="btn btn-group">
                        <button id="agregarU" class="btn btn-info" onclick="btnUsuario();" data-toggle="modal" data-target="#myModal"> 
                            <span class="glyphicon glyphicon-plus"></span>Agregar Usuario</button>
                        </div>
                        <input type="hidden" name="${_csrf.parameterName}"
                               value="${_csrf.token}" />
                        <input type="text" class="form-control pull-right" style="width:20%" 
                               id="search" onkeyup="busquedaTbl('tableUsuario');" placeholder="Busqueda">
                    </div>
                    <!-- Listado de usuarios -->
                    <div  class="col-md-12">
                        <div class="table-responsive">
                            <table id="tableUsuario" class="table table-striped">
                                <thead>
                                    <tr>                            
                                        <th>No</th>
                                        <th>Nickname</th>
                                        <th style="display:none">Password</th>
                                        <th>Correo Electronico</th>
                                        <th style="display:none">IDrol</th>
                                        <th>Rol</th>
                                        <th style="display:none">IDEstatus</th>
                                        <th>Estatus</th>
                                        <th>Nombre</th>
                                        <th>Apellido Paterno</th>
                                        <th>Apellido Materno</th>
                                        <th>CURP</th>
                                        <th style="display:none">sexoID</th>
                                        <th>Sexo</th>
                                        <th style="display:none">TipTelID</th>
                                        <th>Tip.Telefono</th>
                                        <th style="display:none">TelID</th>
                                        <th>No.Telefono</th>
                                        <th style="display:none">SucursalID</th>                                        
                                        <th>Sucursal</th>
                                        <th style="display:none">IDuser</th>
                                        <th>Actualizar</th>
                                    </tr>
                                </thead>
                                <tbody id="bodytabla">
                                    <c:forEach items="${lUsuario}" var="usuario" varStatus="count"> 
                                        <tr>                               

                                            <td id="nouser">${count.count}</td>
                                            <td>${usuario.nickname}</td>
                                            <td style="display:none">${usuario.pass}</td>
                                            <td>${usuario.correoelectronico}</td>
                                            <td style="display:none">${usuario.rol.rolid}</td>
                                            <td>${usuario.rol.nombre}</td>
                                            <td style="display:none">${usuario.estatusUsuario.estatususuarioid}</td>
                                            <td>${usuario.estatusUsuario.nombre}</td>
                                            <td>${usuario.personaid.nombre}</td>
                                            <td>${usuario.personaid.apaterno}</td>
                                            <td>${usuario.personaid.amaterno}</td>
                                            <td>${usuario.personaid.curp}</td>                                    
                                            <td style="display:none">${usuario.personaid.sexoid.sexoid}</td> 
                                            <td> ${usuario.personaid.sexoid.descripcion}</td>
                                            <td style="display: none">${usuario.telefonoid.tipoid.tipoid}</td> 
                                            <td>${usuario.telefonoid.tipoid.tipotelefono}</td>   
                                            <td style="display: none">${usuario.telefonoid.telefonoid}</td> 
                                            <td>${usuario.telefonoid.numTelefono}</td>     
                                            <td style="display:none">${usuario.sucursalid.sucursalid}</td>
                                            <td>${usuario.sucursalid.nombresucursal}</td>
                                            <td id="iduser" style="display:none">${usuario.usuarioid}</td>

                                            <td><button id="mostrarU" onclick="mostrarUsuario();" data-toggle="modal" data-target="#myModal" class="btn btn-warning">
                                                    <span class="glyphicon glyphicon-pencil"></span> </button></td>

                                        </tr>

                                    </c:forEach>

                                </tbody>

                            </table>

                        </div>           
                    </div>
                </div><!-- row-->
            </div><!--class body -->
        </div><!-- panel-primary-->
    </div>  <!-- panel-group-->  
</div><!--class container -->


<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog" data-backdrop="static" 
  data-keyboard="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Fomulario para administrar usuarios del sistema</h3>
                </div>
                <div class="modal-body">
                    <!--Formilario para agregar usuario -->
                    <form class="form-horizontal"  modelAttribute="user" id="frmUsuario">
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="nickname">Nickname:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="nick" placeholder="Ingrese alias"onkeyup="mayuscula(this);" onchange="verificarUsuario();"required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="pwd">Password:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" id="pass" placeholder="Ingrese password" onkeyup="mayuscula(this);"required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="email">Correo:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="email" onkeyup="mayuscula(this);" placeholder="nombredeusuario@nombrededominio.extensiÃ³n" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="control-label col-sm-2">Roles<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo -->
                                <select id="roluser" class="form-control">
                                    <option value="0">Seleccione rol de usuario</option>
                                    <c:forEach items="${lRol}" var="rol">
                                        <option value="${rol.rolid}">${rol.nombre} </option>
                                    </c:forEach>
                                </select>                                            
                            </div>                                       

                            <label  class="control-label col-sm-2">Estatus Usuario<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo -->
                                <select id="estatususer" class="form-control">
                                    <option value="0">Seleccione estatus de usuario</option>
                                    <c:forEach items="${lEstatus}" var="estatus">
                                        <option value="${estatus.estatususuarioid}">${estatus.nombre} </option>
                                    </c:forEach>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-sm-10">
                                <input type="text"  style="display:none" class="form-control" id="idusuario" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="name">Nombre:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="name" placeholder="Ingrese nombre" onkeyup="mayuscula(this);"required>
                            </div>
                            <label class="control-label col-sm-2" for="apaterno">Apellido Paterno:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="apaterno" placeholder="Ingrese apellido paterno" onkeyup="mayuscula(this);" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="amaterno">Apellido Materno:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="amaterno" placeholder="Ingrese apellido materno" onkeyup="mayuscula(this);"required>
                            </div>
                            <label class="control-label col-sm-2" for="curp">CURP:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="curp" placeholder="Ingrese CURP" onkeyup="mayuscula(this);"required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label  class="control-label col-sm-2">Sexo:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo -->
                                <select id="sexuser" class="form-control">
                                    <option value="0">Seleccione sexo de usuario</option>
                                    <c:forEach items="${lSexo}" var="sexo">
                                        <option value="${sexo.sexoid}">${sexo.descripcion}</option>
                                    </c:forEach>
                                </select>                                            
                            </div>                                  

                            <label  class="control-label col-sm-2">Tipo Telefono:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo TipoTelefono -->
                                <select id="tipTelU" class="form-control">
                                    <option value="0">Seleccionar Tipo Telefono</option>
                                    <c:forEach items="${lTipoTelefono}" var="tipo">
                                        <option value="${tipo.tipoid}">${tipo.tipotelefono}</option>
                                    </c:forEach>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                <input type="number" class="form-control"  style="display:none" id="idtel" placeholder="IDTele">
                            </div>
                            <label  class="control-label col-sm-2">Numero de Telefono:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <input type="number" class="form-control" id="numtel" required placeholder="No.Telefono">
                            </div>
                            <label  class="control-label col-sm-2">Sucursal:<b style="color: red" title="Campo Requerido">*</b></label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo Sucursal -->
                                <select id="sucursalUs" class="form-control">
                                    <option value="0">Seleccionar Sucursal</option>
                                    <c:forEach items="${lSucursal}" var="sucursal">
                                        <option value="${sucursal.sucursalid}">${sucursal.nombresucursal}</option>
                                    </c:forEach>
                                </select>
                            </div>
                        </div>

                    </form> 
                </div><!--modal body-->
                <div class="modal-footer">
                    <div class="form-group">
                        <button id="guardarU" type="button" class="btn btn-success" onclick="agregarUsuario();">Guardar</button>
                        <button id="actualizarU" onclick="actualizarUsuario();" class="btn btn-primary" >Actualizar</button>
                            <a id="user" href="<c:url value='/usuario'/>"><button type="button" class="btn btn-default" onclick="limpiarForm('frmUsuario');">Cerrar</button></a>

                    </div>
                </div><!--modal footer-->
            </div><!--modal6-container-->
        </div><!--modal dialog-->
    </div><!--modalfade-->
</div><!--container-->
</body>
</html>
