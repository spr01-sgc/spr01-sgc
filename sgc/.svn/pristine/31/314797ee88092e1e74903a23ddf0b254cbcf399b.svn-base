<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>

<%@include file="index.jsp" %>
<br />
<br />
<br />
<div class="container">   
    <div class="panel-group">
        <div class="panel panel-primary">
            <div class="panel-heading">PBA</div>
            <div id="contenidoPantalla" class="panel-body">  
                <div class="row">
   <div class="form-group">
<input type="text" class="form-control pull-right" style="width:20%" 
       id="search" onkeyup="busquedaTbl('tablePba');" placeholder="Busqueda">
</div>
                    <!-- Listado de pba -->
                    <div  class="col-md-12">
                        <div class="table-responsive">
                            <table id="tablePba" class="table table-striped" cellspacing='30'>
                                <thead>
                                    <tr>
                                        <th style="display: none">IDPBA</th>
                                        <th>No</th>
                                        <th>No.Expediente</th>
                                        <th>Fecha Busqueda</th>                                
                                        <th>Nombres</th>
                                        <th>Apellido Paterno</th>
                                        <th>Apellido Materno</th>  
                                        <th>CURP</th>
                                        <th style="display:none">Sexo ID</th>
                                        <th>Sexo</th>
                                        <th style="display:none">DelitoID</th>
                                        <th>Delito</th>
                                        <th style="display:none">OrganizacionID</th>
                                        <th>Organización</th>
                                        <th>informacionID</th>
                                        <th>Información </th>
                                        <th>Descripcion</th>
                                        <th style="display:none">PaisId</th>
                                        <th>Pais</th>
                                        <th style="display:none">EstatusId</th>
                                        <th>Estatus</th>
                                        <th>Actualizar</th>

                                    </tr>
                                </thead>
                                <tbody id="bodytabla">
                                    <c:forEach items="${lPba}" var="pba" varStatus="cont">
                                        <tr>
                                            <td id="idpba" style="display: none">${pba.pbaid}</td>
                                            <td>${cont.count}</td>
                                            <td>${pba.noexpediente}</td>
                                            <td>${pba.fechabusqueda}</td>
                                            <td>${pba.personaid.nombre}</td>                                        
                                            <td>${pba.personaid.apaterno}</td> 
                                            <td>${pba.personaid.amaterno}</td> 
                                            <td>${pba.personaid.curp}</td> 
                                            <td style="display:none"> ${pba.personaid.sexoid.sexoid}</td> 
                                            <td> ${pba.personaid.sexoid.descripcion}</td>
                                            <td style="display:none"> ${pba.delitoid.delitoid}</td> 
                                            <td> ${pba.delitoid.nombre}</td>
                                            <td style="display:none"> ${pba.organizacionid.organizacionid}</td> 
                                            <td> ${pba.organizacionid.nombre}</td>
                                            <td id="infId"> ${pba.informacionadicionalid.informacionadicionalid}</td>
                                                <td> ${pba.informacionadicionalid.nombre}</td>
                                                <td> ${pba.informacionadicionalid.descripcion}</td>
                                            <td style="display:none"> ${pba.paisid.paisid}</td> 
                                            <td> ${pba.paisid.nombre}</td>
                                            <td style="display:none"> ${pba.estatuspbapepid.estatuspbapepid}</td> 
                                            <td> ${pba.estatuspbapepid.descripcion}</td>
                                            <td><button id="mostrarPba" onclick="mostrarPBA();" data-toggle="modal" data-target="#myModal" class="btn btn-warning">
                                                    <span class="glyphicon glyphicon-pencil"></span> </button></td>
                                        </tr>
                                    </c:forEach>
                                </tbody>
                            </table>
                        </div>     <!-- Responsive Table-->      
                        <button id="agregarPba" class="btn btn-info" data-toggle="modal" data-target="#myModal"> 
                            <span class="glyphicon glyphicon-file"></span> Nuevo</button>
                        <input type="hidden" name="${_csrf.parameterName}"
                               value="${_csrf.token}" />
                    </div><!--col-m-12 -->
                </div><!-- row-->
            </div><!--class body -->
        </div><!-- panel-primary-->
    </div>  <!-- panel-group-->  
</div><!--class container -->

<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h3> Personas Buscadas por las Autoridades</h3>
                </div>
                <div class="modal-body">
                    <!--Formilario para agregar usuario -->
                    <form class="form-horizontal" id="frmPba">
                        <div class="form-group">
                            <label  class="control-label col-sm-2">No Expediente</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="noEx" placeholder="Ingresa el numéro de expediente">
                            </div>                                 

                            <label  class="control-label col-sm-2">Fecha Busqueda:</label>
                            <div class="col-sm-4">
                                <input type="date" class="form-control" id="fechBus" title="Seleccione fecha de busqueda">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Nombre(s)</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="nomPba" placeholder="Ingrese el nombre">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Apellido Paterno</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="apPat" placeholder="Ingrese el apellido paterno ">
                            </div>
                            <label class="control-label col-sm-2">Apellido Materno</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="apMat" placeholder="Ingrese el apellido materno">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">CURP</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="curpPba" placeholder="Ingrese la CURP">
                            </div>
                            <label  class="control-label col-sm-2">Sexo:</label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo -->
                                <select id="sexoPba" class="form-control">
                                    <option value="0">Seleccione sexo de usuario</option>
                                    <c:forEach items="${lSexo}" var="sexo">
                                        <option value="${sexo.sexoid}">${sexo.descripcion} </option>
                                    </c:forEach>
                                </select>                                            
                            </div>   
                        </div>  
                        <div class="form-group">                                      
                            <label  class="control-label col-sm-2">Delito:</label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo -->
                                <select id="delitoPba" class="form-control">
                                    <option value="0">Seleccione el Delito</option>
                                    <c:forEach items="${lDelito}" var="delito">
                                        <option value="${delito.delitoid}">${delito.nombre} </option>
                                    </c:forEach>
                                </select>                                            
                            </div>   
                            <label  class="control-label col-sm-2">Organización:</label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo -->
                                <select id="organizaciónPba" class="form-control">
                                    <option value="0">Seleccione la Organización</option>
                                    <c:forEach items="${lOrganizacion}" var="organizacion">
                                        <option value="${organizacion.organizacionid}">${organizacion.nombre} </option>
                                    </c:forEach>
                                </select>                                            
                            </div>   
                        </div> 
                        <div class="form-group">                           
                            <label class="control-label col-sm-2">Información adicional:</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="tituloPba" placeholder="Ingresar un titulo">
                            </div>
                            <label class="control-label col-sm-2">Descripción:</label>
                            <div class="col-sm-4">
                                <textarea  type="text" class="form-control" id="descripPba" placeholder="Ingresar la descripción"></textarea>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">País:</label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo -->
                                <select id="paisPba" class="form-control">
                                    <option value="0">Seleccione la Pais</option>
                                    <c:forEach items="${lPais}" var="pais">
                                        <option value="${pais.paisid}">${pais.nombre} </option>
                                    </c:forEach>
                                </select>                                            
                            </div>  
                            <label class="control-label col-sm-2">Estatus:</label>
                            <div class="col-sm-4">
                                <!-- consulta catalogo -->
                                <select id="estatusPba" class="form-control">
                                    <option value="0">Seleccione Estatus de la persona</option>
                                    <c:forEach items="${lEstPba}" var="pba">
                                        <option value="${pba.estatuspbapepid}">${pba.descripcion} </option>
                                    </c:forEach>
                                </select>                                            
                            </div>  
                        </div>
                    </form> 
                </div><!--modal body-->
                <div class="modal-footer">
                    <div class="form-group">
                        <button id="guardarPba" type="button" class="btn btn-success" onclick="agregarPba();" data-dismiss="modal" >Guardar</button>
                        <button id="actualizarPba" onclick="actualizarPba();" class="btn btn-primary">Actualizar</button>
                        <button type="button" class="btn btn-default" onclick="limpiarForm('frmPba');" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- ventana modal-->                               
</div> <!-- panel-container-->
</body>
</html>
