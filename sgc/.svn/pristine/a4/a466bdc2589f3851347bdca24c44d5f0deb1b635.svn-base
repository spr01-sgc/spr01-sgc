package com.soma.transmisor.dao.impl;

import com.soma.transmisor.dao.EstatusIdentificacionDao;
import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.model.EstatusIdentificacion;
import java.util.List;
import org.hibernate.Criteria;
import org.hibernate.criterion.Restrictions;
import org.springframework.stereotype.Repository;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("estatusIdentificacionDao")
public class EstatusIdentificacionDaoImpl extends HibernateDao<Integer, EstatusIdentificacion> implements EstatusIdentificacionDao{

    @Override
    public EstatusIdentificacion buscaEstatusIdentificacion(int estatusidentid) {
        Criteria criteria = creaCriteria();
        criteria.add(Restrictions.eq("estatusidentid", estatusidentid));
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        return (EstatusIdentificacion) criteria.uniqueResult();
    }

    @Override
    public List<EstatusIdentificacion> showEstatusIdentificacion() {
        Criteria criteria = creaCriteria();
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        List<EstatusIdentificacion> lEstatusIdentificacion = criteria.list();
        return lEstatusIdentificacion;
    }
    
}
