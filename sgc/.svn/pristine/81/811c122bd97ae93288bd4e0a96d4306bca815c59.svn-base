package com.soma.transmisor.dao.impl;

import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.dao.MonedaDivisaDao;
import com.soma.transmisor.model.MonedaDivisa;
import java.util.List;
import org.hibernate.Criteria;
import org.hibernate.criterion.Restrictions;
import org.springframework.stereotype.Repository;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("monedaDivisaDao")
public class MonedaDivisaDaoImpl extends HibernateDao<Integer, MonedaDivisa> implements MonedaDivisaDao{

    @Override
    public MonedaDivisa buscaClave(int monedadivisaid) {
        Criteria criteria =  creaCriteria();
        criteria.add(Restrictions.eq("monedadivisaid", monedadivisaid));
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        return (MonedaDivisa) criteria.uniqueResult();
    }

    @Override
    public List<MonedaDivisa> showMonedaDivisa() {
        Criteria criteria = creaCriteria();
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        List<MonedaDivisa> lMonedaDivisa = criteria.list();
        
        return lMonedaDivisa;
    }
    
}
