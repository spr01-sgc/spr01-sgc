package com.soma.transmisor.service.impl;

import com.soma.transmisor.dao.PersonaDao;
import com.soma.transmisor.model.Persona;
import com.soma.transmisor.service.PersonaService;
import java.util.List;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("personaService")
@Transactional
public class PersonaServiceImpl implements PersonaService{
    @Autowired
    PersonaDao personaDao;
    
    private boolean estadoMetodo = false;
    
    @Override
    public Persona buscaPersona(String curp) {
        return personaDao.buscaPersona(curp);
    }
    
    @Override
    public Persona buscaPersonaID(int idPersona) {
        return personaDao.buscaPersonaID(idPersona);
    }

    @Override
    public List<String> lBeneficiarios(String claveCliente) {

        return personaDao.lBeneficiarios(claveCliente);
    }

    @Override
    public Persona idPersona(String nombre, String aPaterno, String aMaterno) {
        return personaDao.idPersona(nombre, aPaterno, aMaterno);
    }

    @Override
    public Persona persona(String nombre, String aPaterno, String aMaterno) {
        return personaDao.persona(nombre, aPaterno, aMaterno);
    }

    @Override
    public boolean update(int idPersona, String curp) {
         personaDao.update(idPersona, curp);
        return estadoMetodo = true;
    }
    
}
