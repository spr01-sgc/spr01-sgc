package com.soma.transmisor.service.impl;

import com.soma.transmisor.dao.PbaDao;
import com.soma.transmisor.model.Pba;
import com.soma.transmisor.service.PbaService;
import java.util.List;
import javax.transaction.Transactional;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

/**
 *
 * @author JASMIN-SOMA
 */
@Service("pbaService")
@Transactional
public class PbaServiceImpl implements PbaService{
@Autowired
    PbaDao pbaDao;
    private boolean estadoMetodo = false;

    @Override
    public boolean save(Pba pba) {
    pbaDao.save(pba);
    return estadoMetodo=true;
    }

    @Override
    public boolean update(Pba pba) {
    pbaDao.update(pba);
    return estadoMetodo=true;
    }

    @Override
    public boolean delete(int pbaid) {
    pbaDao.delete(pbaid);
    return estadoMetodo=true;
    }

    @Override
    public List<Pba> showPba() {
    return pbaDao.showPba();
    }

    @Override
    public Pba busquedaId(int pbaid) {
    return  pbaDao.busquedaId(pbaid);
    }
    
}
