<%@page contentType="text/html" pageEncoding="UTF-8"%>

<%@include file="index.jsp" %>
<br />
<br />
<br />
<div class="container">   
    <div class="panel-group">
        <div class="panel panel-primary">
            <div class="panel-heading">Bitacora del estado de Pagos</div>
            <div id="contenidoPantalla" class="panel-body">        
                <div class="row">
                    <!-- Listado de pba -->
                    <div  class="col-md-12">
                        <div class="table-responsive">
                            <table id="tablePba" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>No.Pago</th>                              
                                        <th>Usuario</th>  
                                        <th>Cantidad Enviada</th>
                                         <th>Cantidad Entregada</th>
                                        <th>Fecha</th>   
                                         <th style="display:none">CausaId</th>                                        
                                        <th>Causa Rechazo</th>
                                        <th style="display:none">EstatusIdPago</th>
                                        <th>Estatus del Pago</th>
                                        

                                    </tr>
                                </thead>
                                <tbody id="bodytabla">
                                    <c:forEach items="${lBitaPago}" var="bitpago">
                                        <tr>
                                            <td id="idbitPago">${bitpago.bitapagoid}</td>
                                            <td>${bitpago.pagoid}</td>
                                            <td>${bitpago.pagoid.cantidadenviada}</td>
                                            <td>${bitpago.pagoid.cantidadentregada}</td>                                        
                                            <td>${bitpago.fecha}</td> 
                                            <td style="display:none"> ${bitpago.estatusid.estatusid}</td> 
                                            <td> ${bitpago.estatusid.descripcion}</td>
                                            
                                        </tr>

                                    </c:forEach>

                                </tbody>

                            </table>

                        </div>     <!-- Table-->      
                       
                        <input type="hidden" name="${_csrf.parameterName}"
                               value="${_csrf.token}" />
                    </div><!--col-m-12 -->
                </div><!-- row-->
            </div><!--class body -->
        </div><!-- panel-primary-->
    </div>  <!-- panel-group-->  
</div><!--class container -->

</body>
</html>

