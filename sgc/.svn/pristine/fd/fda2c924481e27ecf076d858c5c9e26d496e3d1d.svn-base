                            <label  class="control-label col-sm-1">Fecha inicio:</label>
                            <div class="col-sm-2">
                                <input type="date" class="form-control" id="fechIni" onchange="movimientosRelevantes();">
                            </div>                                 

                            <label  class="control-label col-sm-2">Fecha Termino:</label>
                            <div class="col-sm-2">
                                <input type="date" class="form-control" id="fechTer" onchange="movimientosRelevantes();">
                            </div>
                        </div>
                        <div class="form-group">
                            <label  class="control-label col-sm-1">Valor del dolar: </label>
                            <div class="col-sm-2">
                                <div class="input-group">
                                    <!--<div class="input-group-addon">$</div>-->
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
                                    <input type="number" class="form-control" id="valorDolarPld" onchange="conversion();"value="18.73"/>
                                </div>
                            </div> 
                            <label  class="control-label col-sm-1" id="dolares">Dolares:</label>
                            <div class="col-sm-2">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
                                    <input type="number"  class="form-control" id="dolaresPld"  value="5000" onchange="movimientosRelevantes();"/> 
                                </div>
                            </div>
                            <label  class="control-label col-md-1" id="pesos">Pesos:</label> 
                            <label  class="control-label col-md-1" id="pesosPld">$00.00</label> 

                        </div>
                        <input type="hidden" name="${_csrf.parameterName}"
                               value="${_csrf.token}" />
                    </form>
                </div><!-- ROW-->
            </div>
        </div>
    </div>
</div><!--Container -->
<div id="tblRelevantes" style="display: none">
    <div class="container">
        <div class="col-md-12">
            <div class="table-responsive">
                <h2>Movimientos Relevantes</h2>
                <p>Clientes y sus movimientos relevantes:</p>            
                <table id="tblConRel" class="table table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Clave de Cliente</th>
                            <th>Cliente</th>
                            <th>Depósito</th>
                            <th>Retiro</th>
                            <th>Tipo de operación</th>
                        </tr>
                    </thead>
                    <tbody id="tbRele">

                    </tbody>
                </table>
            </div><!-- table responsive-->
        </div><!-- col-12-->
    </div> <!--contaniner-->
    <div class="container">
        <button id="download" onclick="reporteRelevantes('csv')" class="btn btn-success">
            CSV</button>
        <button id="download" onclick="reporteRelevantes('excel');" class="btn btn-success">
            Excel</button>
    </div>
</div>
<!--Tabla Notificacion de operación -->
<div id="tblNotifR" style="display:inline">
<div class="container">
    <div  class="col-md-12">
        <div class="table-responsive">
            <h2>Detección Operación Relevantes</h2>           
            <table id="tblNotRel" class="table table-hover">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Clave de Cliente</th>
                        <th>Deposito</th>
                        <th>Retiro</th>
                        <th>Tipo de operación</th>
                    </tr>
                </thead>
                <tbody>
                    <c:forEach items="${lOpRel}" var="relevante" varStatus="contador">
                        <tr>
                            <td>${contador.count}</td>
                            <td>${relevante[0]}</td>
                            <td>${relevante[2]}</td>
                            <td>${relevante[3]}</td>                                                
                            <td>${relevante[1]}</td>
                        </tr>
                    </c:forEach>
                </tbody>
            </table>
        </div><!-- table responsive-->
    </div><!-- col-12-->
</div> <!--contaniner-->
</div>
