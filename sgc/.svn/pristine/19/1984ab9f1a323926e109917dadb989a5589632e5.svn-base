package com.soma.transmisor.dao.impl;

import com.soma.transmisor.dao.BeneficiarioDao;
import com.soma.transmisor.dao.HibernateDao;
import com.soma.transmisor.model.Beneficiario;
import org.hibernate.Query;
import org.springframework.stereotype.Repository;

/**
 *
 * @author LUIS-SOMA
 */
@Repository("beneficiarioDao")
public class BeneficiarioDaoImpl extends HibernateDao<Integer, Beneficiario> implements BeneficiarioDao{

    @Override
    public void update(Beneficiario idBeneficiario) {
        actualizar(idBeneficiario);
        System.out.println(BeneficiarioDaoImpl.class + " Se ha actualizado correctamente el beneficiario " + idBeneficiario);
    }

    @Override
    public void save(Beneficiario idBeneficiario) {
        guardar(idBeneficiario);
        System.out.println(BeneficiarioDaoImpl.class+ " Se ha guardado correctamente el beneficiario "+idBeneficiario);
    }

    @Override
    public Beneficiario beneficiairio(int idPersona) {
         Query query = getSession().createQuery("FROM Beneficiario \n"
                + " WHERE personaid = "+ idPersona);
        return (Beneficiario) query.uniqueResult();
    }

    @Override
    public Beneficiario clave(String clave) {
        Query query = getSession().createQuery("FROM Beneficiario \n"
                + " WHERE clave = '"+ clave+"'");
        return (Beneficiario) query.uniqueResult();       
    }
  
    
    
}
