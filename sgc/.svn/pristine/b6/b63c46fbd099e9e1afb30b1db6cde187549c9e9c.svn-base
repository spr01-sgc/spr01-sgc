@Repository("entidadDao")
public class EntidadDaoImpl extends HibernateDao<Integer, Entidad> implements EntidadDao {

    @Override
    public void save(Entidad entidad) {
        //guarda lo que trae del arreglo
        guardar(entidad);
        //mandar a consola
        System.out.print(EntidadDaoImpl.class + "Se ha guardado correctamente la entidad" + entidad.toString());
        
    }

    @Override
    public void delete(int entidadid) {
        //Elimina por id del delito 
        Criteria crit = creaCriteria();
        crit.add(Restrictions.eq("entidadid", entidadid));
        Entidad enti = (Entidad) crit.uniqueResult();
        eliminar(enti);
        System.out.print(EntidadDaoImpl.class + "Se ha eliminado correctamente la entidad" + entidadid);
    }

    @Override
    public void update(Entidad entidad) {
        actualizar(entidad);
        System.out.print(EntidadDaoImpl.class + "Se ha actualizado correctamente el entidad" + entidad.toString());
    }

    @Override
    public Entidad buscaId(int entidadid) {
        System.out.println(EntidadDaoImpl.class + "\nBuscando Entidad por usuarioId: " + entidadid);
        Entidad entidad = getPorId(entidadid);
        return entidad;
    }

    @Override
    public List<Entidad> showEntidad() {
        //criterias consultas a la base de datso
        Criteria criteria = creaCriteria();
        //indicar que no traiga datos repetidos
        criteria.setResultTransformer(Criteria.DISTINCT_ROOT_ENTITY);
        //lista los delitos sin repetir algun dato
        List<Entidad> lEntidad = criteria.list();
        return lEntidad;
    }

